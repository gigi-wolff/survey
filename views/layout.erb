<html>

  <title>Survey</title>
  <link rel="stylesheet" href="/stylesheets/survey.css"  type="text/css" />

  <body>
    <%# session.delete[:message] returns the value of the message key 
    from the session hash, then deletes the key-value pair.%>
    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <%== yield %>
  </body>
</html>
